{
  "dashboard": {
    "title": "MagFlow ERP - System Overview",
    "tags": ["magflow", "erp", "monitoring"],
    "timezone": "UTC",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "30s",
    "panels": [
      {
        "title": "Application Health Status",
        "type": "stat",
        "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "up{job=\"magflow-erp\"}",
            "legendFormat": "Health Status"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "mappings": [
              {
                "options": {
                  "0": {"text": "Down", "color": "red"},
                  "1": {"text": "Up", "color": "green"}
                },
                "type": "value"
              }
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": null},
                {"color": "green", "value": 1}
              ]
            }
          }
        }
      },
      {
        "title": "HTTP Request Rate",
        "type": "graph",
        "gridPos": {"x": 6, "y": 0, "w": 12, "h": 4},
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"magflow-erp\"}[5m])",
            "legendFormat": "{{method}} {{endpoint}}"
          }
        ]
      },
      {
        "title": "Database Connections",
        "type": "stat",
        "gridPos": {"x": 18, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "pg_stat_activity_count{datname=\"magflow\"}",
            "legendFormat": "Active Connections"
          }
        ]
      },
      {
        "title": "PostgreSQL Performance",
        "type": "graph",
        "gridPos": {"x": 0, "y": 4, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(pg_stat_database_tup_inserted{datname=\"magflow\"}[5m])",
            "legendFormat": "Inserts/sec"
          },
          {
            "expr": "rate(pg_stat_database_tup_updated{datname=\"magflow\"}[5m])",
            "legendFormat": "Updates/sec"
          },
          {
            "expr": "rate(pg_stat_database_tup_deleted{datname=\"magflow\"}[5m])",
            "legendFormat": "Deletes/sec"
          }
        ]
      },
      {
        "title": "Redis Performance",
        "type": "graph",
        "gridPos": {"x": 12, "y": 4, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "redis_connected_clients",
            "legendFormat": "Connected Clients"
          },
          {
            "expr": "redis_commands_processed_total",
            "legendFormat": "Commands/sec"
          }
        ]
      }
    ],
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    }
  },
  "overwrite": false
}
