# MagFlow ERP - Production Environment Example

# Core
ENVIRONMENT=production
APP_NAME=magflow
APP_PORT=8000
LOG_LEVEL=INFO

# Secrets (change in real .env.production, do not commit secrets)
SECRET_KEY=replace_with_strong_secret
DB_PASSWORD=replace_with_strong_db_password
GRAFANA_PASSWORD=replace_with_strong_grafana_password
REDIS_PASSWORD=replace_with_strong_redis_password

# Database (used by docker-compose.prod.yml)
DB_HOST=pgbouncer
DB_PORT=6432
DB_NAME=magflow
DB_USER=magflow_user

# Redis
REDIS_URL=redis://redis:6379/0

# JWT / Keys
JWT_ALGORITHM=RS256
JWT_PUBLIC_KEY=/app/jwt-keys/public.pem
JWT_PRIVATE_KEY=/app/jwt-keys/private.pem

# OpenTelemetry
OTEL_SERVICE_NAME=magflow-api
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317

# CORS
BACKEND_CORS_ORIGINS=["*"]

# PgBouncer
PGBOUNCER_HOST=pgbouncer
PGBOUNCER_PORT=6432
PGBOUNCER_POOL_MODE=transaction
PGBOUNCER_MAX_CLIENT_CONN=1000
PGBOUNCER_DEFAULT_POOL_SIZE=20
PGBOUNCER_MIN_POOL_SIZE=5
