{{ define "email.subject" }}[{{ .Status | toUpper }}{{ if eq .Status "firing" }}:{{ .Alerts.Firing | len }}{{ end }}] {{ .GroupLabels.alertname }} - MagFlow ERP{{ end }}

{{ define "email.body" }}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <style>
        body { font-family: Arial, sans-serif; margin: 20px; }
        .header { background-color: #f8f9fa; padding: 20px; border-radius: 5px; margin-bottom: 20px; }
        .alert { border-left: 4px solid; padding: 15px; margin: 10px 0; border-radius: 3px; }
        .critical { border-color: #dc3545; background-color: #f8d7da; }
        .warning { border-color: #ffc107; background-color: #fff3cd; }
        .info { border-color: #17a2b8; background-color: #d1ecf1; }
        .resolved { border-color: #28a745; background-color: #d4edda; }
        .footer { background-color: #f8f9fa; padding: 15px; border-radius: 5px; margin-top: 20px; font-size: 12px; }
        table { width: 100%; border-collapse: collapse; margin: 10px 0; }
        th, td { padding: 8px; text-align: left; border-bottom: 1px solid #ddd; }
        th { background-color: #f8f9fa; }
    </style>
</head>
<body>
    <div class="header">
        <h2>MagFlow ERP Alert Notification</h2>
        <p><strong>Status:</strong> {{ .Status | toUpper }}</p>
        <p><strong>Time:</strong> {{ .GroupLabels.alertname }} - {{ .Receiver.Name }}</p>
        {{ if gt (len .Alerts.Firing) 0 }}
        <p><strong>Firing Alerts:</strong> {{ len .Alerts.Firing }}</p>
        {{ end }}
        {{ if gt (len .Alerts.Resolved) 0 }}
        <p><strong>Resolved Alerts:</strong> {{ len .Alerts.Resolved }}</p>
        {{ end }}
    </div>

    {{ range .Alerts }}
    <div class="alert {{ if eq .Status "firing" }}{{ if eq .Labels.severity "critical" }}critical{{ else if eq .Labels.severity "warning" }}warning{{ else }}info{{ end }}{{ else }}resolved{{ end }}">
        <h3>{{ .Annotations.title }}</h3>
        <p><strong>Severity:</strong> {{ .Labels.severity | default "info" | toUpper }}</p>
        <p><strong>Description:</strong> {{ .Annotations.description }}</p>
        <p><strong>Started:</strong> {{ .StartsAt.Format "2006-01-02 15:04:05 UTC" }}</p>

        {{ if .Annotations.runbook_url }}
        <p><strong>Runbook:</strong> <a href="{{ .Annotations.runbook_url }}">{{ .Annotations.runbook_url }}</a></p>
        {{ end }}

        <table>
            <tr><th>Label</th><th>Value</th></tr>
            {{ range .Labels.SortedPairs }}
            <tr><td>{{ .Name }}</td><td>{{ .Value }}</td></tr>
            {{ end }}
        </table>

        {{ if .Annotations }}
        <table>
            <tr><th>Annotation</th><th>Value</th></tr>
            {{ range .Annotations.SortedPairs }}
            <tr><td>{{ .Name }}</td><td>{{ .Value }}</td></tr>
            {{ end }}
        </table>
        {{ end }}
    </div>
    {{ end }}

    <div class="footer">
        <p><strong>MagFlow ERP Monitoring System</strong></p>
        <p>This is an automated alert from the MagFlow ERP monitoring system.</p>
        <p>Please check the Grafana dashboard for more details: <a href="http://localhost:3000">http://localhost:3000</a></p>
        <p>For urgent issues, contact the operations team immediately.</p>
    </div>
</body>
</html>
{{ end }}
